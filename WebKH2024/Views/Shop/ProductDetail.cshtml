@model WebKH2024.Models.SanPham
@{
    ViewBag.Title = "ProductDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
<link href="~/assets/css/prodetail.css" rel="stylesheet" />
<link href="~/assets/css/Review.css" rel="stylesheet" />
<!-- breadcrumb -->
<div class="container">
    <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
        <a href="~/Home/Index" class="stext-109 cl8 hov-cl1 trans-04" style="font-size:14px;">
            Home
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
        </a>

        <a href="~/Shop/Index" class="stext-109 cl8 hov-cl1 trans-04" style="font-size:14px;">
            @Html.DisplayFor(model => model.DanhMuc.TenDanhMuc)
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
        </a>
        <span class="stext-109 cl4" style="font-size:14px;">
            @Html.DisplayFor(model => model.TenSanPham)
        </span>
    </div>
</div>


<!-- Product Detail -->
<form id="add-to-cart-form" action="@Url.Action("AddToCart", "GioHang")">
    <section class="sec-product-detail bg0 p-t-65 p-b-60">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-lg-7 p-b-30">
                    <div class="p-l-25 p-r-30 p-lr-0-lg">
                        <div class="wrap-slick3 flex-sb flex-w">
                            <div class="wrap-slick3-dots"></div>
                            <div class="wrap-slick3-arrows flex-sb-m flex-w"></div>
                            <div class="slick3 gallery-lb">

                                <div class="item-slick3" data-thumb="@Model.HinhAnh">
                                    <div class="wrap-pic-w pos-relative">
                                        <img src="@Model.HinhAnh" alt="IMG-PRODUCT">
                                        <a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04" href="@Model.HinhAnh">
                                            <i class="fa fa-expand"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-5 p-b-30">
                    <div class="p-r-50 p-t-5 p-lr-0-lg">
                        <h4 style="font-size: 20px; color: #000000; margin-bottom: 10px; font-weight: bold; font-family: Montserrat, sans-serif; ">
                            @Model.TenSanPham
                        </h4>
                        <p style="font-size: 18px; margin-bottom: 10px; font-weight:bold">
                            Số Lượng :
                            @Model.SoLuong
                        </p>
                        <p style="color:crimson; font-size: 18px;font-weight:600; margin-bottom:10px;">
                            <i class="fas fa-tag me-2"></i>
                            @string.Format("{0:#,0}", Model.GiaBan) VNĐ
                        </p>
                        <div class="mb-2">
                            <i class="fas fa-users text-secondary me-2"></i>
                            <span class="text-muted">Số lượt đánh giá:</span>
                            <span class="fw-bold">@Model.Reviews.Count() <i style="color: #ffd700;" class="fa fa-star"></i></span>
                        </div>

                        <!--  -->
                        <div class="p-t-33">
                            <div class="flex-w flex-r-m p-b-10">
                                <div class="size-203 flex-c-m respon6">
                                    Size
                                </div>

                                <div class="size-204 respon6-next">
                                    <div class="rs1-select2 bor8 bg0">
                                        <select class="js-select2" name="Size">
                                            <option value="">Choose an option</option>
                                            <option value="S" @(Model.Size == "S" ? "selected" : "")>Size S</option>
                                            <option value="M" @(Model.Size == "M" ? "selected" : "")>Size M</option>
                                            <option value="L" @(Model.Size == "L" ? "selected" : "")>Size L</option>
                                            <option value="XL" @(Model.Size == "XL" ? "selected" : "")>Size XL</option>
                                            <option value="2XL" @(Model.Size == "2XL" ? "selected" : "")>Size 2XL</option>
                                            <!-- Các option khác -->
                                        </select>
                                        <div class="dropDownSelect2"></div>
                                    </div>
                                </div>
                            </div>

                            <div class="flex-w flex-r-m p-b-10">
                                <div class="size-203 flex-c-m respon6">
                                    Color
                                </div>

                                <div class="size-204 respon6-next">
                                    <div class="rs1-select2 bor8 bg0">
                                        <select class="js-select2" name="MauSac">
                                            <option value="">Choose an option</option>
                                            <option value="Xanh" @(Model.MauSac == "Xanh" ? "selected" : "")>Xanh</option>
                                            <option value="Trắng" @(Model.MauSac == "Trắng" ? "selected" : "")>Trắng</option>
                                            <option value="Hồng" @(Model.MauSac == "Hồng" ? "selected" : "")>Hồng</option>
                                            <option value="Đen" @(Model.MauSac == "Đen" ? "selected" : "")>Đen</option>
                                            <option value="Kem" @(Model.MauSac == "Kem" ? "selected" : "")>Kem</option>
                                            <!-- Các option khác -->
                                        </select>
                                        <div class="dropDownSelect2"></div>
                                    </div>
                                </div>
                            </div>

                            <div class="flex-w flex-r-m p-b-10">
                                <div class="size-204 flex-w flex-m respon6-next">
                                    <div class="wrap-num-product flex-w m-r-20 m-tb-10">
                                        <div class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m">
                                            <i class="fs-16 zmdi zmdi-minus"></i>
                                        </div>

                                        <input class="mtext-104 cl3 txt-center num-product" type="number" name="quantity" value="1">

                                        <div class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m">
                                            <i class="fs-16 zmdi zmdi-plus"></i>
                                        </div>
                                    </div>

                                    <input type="hidden" name="productId" value="@Model.SanPhamID" />
                                    <button type="submit" class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04 js-addcart-detail">
                                        Add to cart
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>

<!-- Reviews Section -->
<div class="reviews-container">
    <!-- Tabs -->
    <div class="tabs">
        <!-- Nav tabs -->
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#description">Description</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#reviews">Reviews</a>
            </li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
            <!-- Description Tab -->
            <div class="tab-pane fade show active" id="description">
                <p class="description-text">
                    @Model.MoTa
                </p>
            </div>
            <!-- Reviews Tab -->
            <div class="tab-pane fade" id="reviews">
                <div class="review-list">
                    @if (!Model.Reviews.Any())
                    {
                        <div class="alert alert-info">Chưa có đánh giá nào cho sản phẩm này.</div>
                    }
                    else
                    {
                    foreach (var item in Model.Reviews)
                    {
                        <div class="card mb-3 shadow-sm border-0">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <strong class="text-primary">
                                            @item.TaiKhoan.Username
                                        </strong>
                                        <div class="text-muted small">@string.Format("{0:dd-MM-yyyy HH:mm}", item.ReviewDate)</div>
                                    </div>
                                </div>

                                <div class="mt-2 mb-2">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= item.Rating)
                                        {
                                            <i class="fas fa-star text-warning"></i>
                                        }
                                        else
                                        {
                                            <i class="far fa-star text-muted"></i>
                                        }
                                    }
                                </div>

                                <p class="mb-0">@item.Comment</p>
                            </div>
                        </div>
                    }
                    }
                </div>

                @if (Session["User"] != null)
                {
                    <form action="@Url.Action("AddReview", "Shop")" method="post" class="add-review-form">
                        <input type="hidden" name="SanPhamID" value="@Model.SanPhamID" />
                        <h5 class="form-title">Add a Review</h5>
                        <div class="form-group">
                            <label>Your Rating</label>
                            <div class="rating">
                                @for (var i = 5; i >= 1; i--)
                                {
                                    <input type="radio" name="Rating" value="@i" id="rating-@i" required />
                                    <label for="rating-@i" class="star">&#9733;</label>
                                }
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="reviewContent">Your Review</label>
                            <textarea id="reviewContent" name="Comment" rows="4" required></textarea>
                        </div>

                        <p class="error-message">@TempData["ErrorMessage"]</p>
                        <button type="submit" class="submit-button">Submit Review</button>
                    </form>
                }
                else
                {
                    <p class="login-prompt">Please <a href="@Url.Action("Login", "Home")">login</a> to add a review.</p>
                }
            </div>

        </div>
    </div>
</div>

<!-- Sản Phẩm Liên Quan -->
<section class="sec-relate-product bg0 p-t-45 p-b-105">
    <div class="container">
        <div class="p-b-45">
            <h3 class="ltext-106 cl5 txt-center">
                Related Products
            </h3>
        </div>

        <!-- Slide2 -->
        <div class="wrap-slick2">
            <div class="slick2">
                @foreach (var product in ViewBag.RelatedProducts)
                {
                    <div class="item-slick2 p-l-15 p-r-15 p-t-15 p-b-15">
                        <!-- Block2 -->
                        <div class="block2">
                            <div class="block2-pic hov-img0">
                                <img src="@product.HinhAnh" alt="IMG-PRODUCT">
                                @if (product.KhuyenMai > 0)
                                {
                                    <div class="promo-label">SALE @product.KhuyenMai%</div>
                                }
                                <a href="@Url.Action("ProductDetail", "Shop", new { id = product.SanPhamID })" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04">
                                    Quick View
                                </a>
                            </div>

                            <div class="block2-txt flex-w flex-t p-t-14">
                                <div class="block2-txt-child1 flex-col-l ">
                                    <a href="@Url.Action("ProductDetail", "Shop", new { id = product.SanPhamID })" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                        @product.TenSanPham
                                    </a>

                                    <span class="stext-105 cl3">
                                        @string.Format("{0:#,0}", product.GiaBan ?? 0) VND
                                    </span>
                                </div>

                                <div class="block2-txt-child2 flex-r p-t-3">
                                    <a href="#" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
                                        <img class="icon-heart1 dis-block trans-04" src="~/assets/images/icons/icon-heart-01.png" alt="ICON">
                                        <img class="icon-heart2 dis-block trans-04 ab-t-l" src="~/assets/images/icons/icon-heart-02.png" alt="ICON">
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

