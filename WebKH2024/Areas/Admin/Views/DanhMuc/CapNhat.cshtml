@model WebKH2024.Models.DanhMuc

@{
    ViewBag.Title = "CapNhat";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h4>Cập Nhật Danh Mục</h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.DanhMucID)
    <div class="form-group row">
        <label class="control-label col-md-2" style="color:black">Tên Danh Mục:</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenDanhMuc, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenDanhMuc, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-md-2" style="color:black">Mô Tả:</label>
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.MoTa, new { @class = "form-control", rows = 3 })
            @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-md-2" style="color:black">Ngày Tạo:</label>
        <div class="col-md-4">
            <input type="datetime-local" name="NgayTao" class="form-control" value="@string.Format("{0:yyyy-MM-ddTHH:mm}", Model.NgayTao)" />
            @Html.ValidationMessageFor(model => model.NgayTao, "", new { @class = "text-danger" })
        </div>

        <label class="control-label col-md-2" style="color:black">Ngày Cập Nhật:</label>
        <div class="col-md-4">
            <input type="datetime-local" name="NgayCapNhat" class="form-control" value="@string.Format("{0:yyyy-MM-ddTHH:mm}", Model.NgayCapNhat)" />
            @Html.ValidationMessageFor(model => model.NgayCapNhat, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Thêm Mới" class="btn btn-primary" />
        </div>
    </div>
</div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
