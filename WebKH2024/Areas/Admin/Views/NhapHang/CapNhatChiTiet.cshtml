@model WebKH2024.Models.ChiTietNhapHang

@{
    ViewBag.Title = "CapNhatChiTiet";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thêm Sản Phẩm </h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.NhapHangID)
    @Html.HiddenFor(model => model.ChiTietNhapHangID)
    <div class="form-group">
        <label class="control-label col-md-2">Sản Phẩm</label>
        <div class="col-md-10">
            <select name="SanPhamID" class="form-control">
                <option value="">Chọn Sản Phẩm</option>
                @foreach (var item in new WebKH2024.Models.mapSanPham().LaySP())
                {
                    <option value="@item.SanPhamID" @(Model.SanPhamID == item.SanPhamID ? "Selected":"")>@item.TenSanPham-@item.GiaBan</option>
                }
            </select>
            @Html.ValidationMessageFor(model => model.SanPhamID, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Số Lượng</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Giá Nhập</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.GiaNhap, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.GiaNhap, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-warning" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
