@model List<WebKH2024.Models.SanPham>

@{
    ViewBag.Title = "Review";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Bootstrap + Font Awesome -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<style>
    .product-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0 15px rgba(0, 123, 255, 0.2);
        }

    .card-img-top {
        height:250px;
        width: 100%;
        object-fit: cover;
        background-color: #f8f9fa; /* màu nền nhẹ để ảnh không bị xấu */
        border-top-left-radius: 1rem;
        border-top-right-radius: 1rem;
    }

    .btn-view {
        transition: background-color 0.3s, color 0.3s;
    }

        .btn-view:hover {
            background-color: #0d6efd;
            color: #fff;
        }
</style>

<div class="container mt-5">
    <h2 class="mb-4 text-center fw-bold text-primary">
        <i class="fas fa-star text-warning me-2"></i>Danh Sách Sản Phẩm Được Đánh Giá
    </h2>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        @foreach (var sp in Model)
        {
            <div class="col">
                <div class="card h-100 shadow border-0 rounded-4 product-card">
                    <img src="@sp.HinhAnh" class="card-img-top" alt="@sp.TenSanPham">
                    <div class="card-body text-center" style="background-color: #060404">
                        <h5 class="card-title fw-semibold" style="color:white">@sp.TenSanPham</h5>
                        <p class="card-text text-danger fw-bold fs-5">
                            <i class="fas fa-tag me-1"></i>@String.Format("{0:N0}₫", sp.GiaBan)
                        </p>
                        <a href="@Url.Action("ChiTiet", "Review", new { id = sp.SanPhamID })"
                           class="btn btn-outline-primary btn-view rounded-pill px-4">
                            <i class="fas fa-comments me-2"></i>Xem đánh giá
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
